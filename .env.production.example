# Production Environment Variables Template
# Copy these to your deployment platform (Render, Netlify, etc.)

# ============================================
# BACKEND API (Render)
# ============================================
NODE_ENV=production
PORT=3002

# Database
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/snaktox_db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-strong-random-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=7d

# AI Service URL (set after AI service deploys)
AI_SERVICE_URL=https://snaktox-ai-service.onrender.com

# CORS Configuration (set after frontend deploys)
CORS_ORIGIN=https://your-app.netlify.app

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============================================
# AI SERVICE (Render)
# ============================================
PORT=8000
DEBUG=false

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here

# CORS Configuration (comma-separated)
CORS_ORIGINS=https://your-app.netlify.app,https://your-backend.onrender.com

# Security
ALLOWED_HOSTS=*
SECRET_KEY=your-ai-service-secret-key

# API Configuration
GEMINI_MODEL=gemini-2.0-flash
GEMINI_VISION_MODEL=gemini-2.0-flash
VISION_CONFIDENCE_THRESHOLD=0.7

# ============================================
# FRONTEND (Netlify)
# ============================================
NEXT_PUBLIC_API_URL=https://your-backend.onrender.com/api/v1
NEXT_PUBLIC_AI_SERVICE_URL=https://snaktox-ai-service.onrender.com
NEXT_PUBLIC_WS_URL=wss://your-backend.onrender.com
NODE_VERSION=18

