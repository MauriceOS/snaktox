{
  "name": "snaktox",
  "version": "1.0.0",
  "description": "AI-powered snakebite awareness, detection, and emergency response system",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "test:cov": "nx run-many --target=test --all --coverage",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint --all --fix",
    "check:secrets": "trufflehog filesystem . --no-verification",
    "dev": "nx run-many --target=serve --all --parallel",
    "dev:backend": "nx serve backend",
    "dev:web": "nx serve web",
    "dev:ai": "nx serve ai-service",
    "dev:mobile": "cd mobile && flutter run",
    "db:seed": "ts-node prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio"
  },
  "devDependencies": {
    "@nx/eslint": "^17.0.0",
    "@nx/jest": "^17.0.0",
    "@nx/next": "^17.0.0",
    "@nx/node": "^17.0.0",
    "@nx/workspace": "^17.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.25",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^15.0.0",
    "nx": "^17.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Maurice Osoro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mauriceosoro/snaktox.git"
  },
  "keywords": [
    "snakebite",
    "healthtech",
    "emergency-response",
    "ai",
    "public-health",
    "kenya",
    "who",
    "cdc",
    "kemri"
  ],
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "mongodb": "^7.0.0"
  }
}
